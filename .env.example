# Example environment variables for the Research & Brainstorming Engine

# Required: Groq API Key for LLM operations
# Get your API key from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: LLM Model Settings
LLM_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4000

# Memory Settings
# Note: Long-term memory (Mem0) requires a valid GROQ_API_KEY
# Short-term memory will work without it
MEMORY_DB_PATH=./chroma_db
MEMORY_COLLECTION_NAME=chat_memories
MEMORY_EMBEDDER_MODEL=sentence-transformers/all-MiniLM-L6-v2
MEMORY_EMBEDDER_PROVIDER=huggingface
MEMORY_TEMPERATURE=0.1
MEMORY_MAX_TOKENS=1000

# CRM Configuration (Optional)
CRM_BASE_URL=https://stage-api.simpo.ai/crm
CRM_API_KEY=
CRM_AUTH_TOKEN=

# PMS Configuration (Optional)
PMS_BASE_URL=https://stage-api.simpo.ai/pms
PMS_API_KEY=
PMS_AUTH_TOKEN=

# Search APIs (Optional - for web research)
GOOGLE_API_KEY=
GOOGLE_CSE_ID=
BING_API_KEY=

# Application Settings
APP_NAME=Research & Brainstorming Engine
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Session Settings
SESSION_EXPIRE_MINUTES=1440