# Backend environment variables
# Copy this file to .env and fill in your actual values

# Required: Groq API Key for LLM
GROQ_API_KEY=your_groq_api_key_here

# Optional: CRM Configuration
CRM_BASE_URL=https://stage-api.simpo.ai/crm
CRM_API_KEY=your_crm_api_key_here
CRM_AUTH_TOKEN=your_crm_auth_token_here

# Optional: PMS Configuration
PMS_BASE_URL=https://stage-api.simpo.ai/pms
PMS_API_KEY=your_pms_api_key_here
PMS_AUTH_TOKEN=your_pms_auth_token_here

# Optional: Search APIs
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here
BING_API_KEY=your_bing_api_key_here

# Application Settings
APP_NAME=Research & Brainstorming Engine
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:8080","http://localhost:5173","http://localhost:3000"]

# LLM Settings
LLM_MODEL=moonshotai/kimi-k2-instruct
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4000

# Database (optional, defaults to SQLite)
DATABASE_URL=sqlite:///./research.db
REDIS_URL=redis://:your_redis_password_here@host:port

# Session
SECRET_KEY=your_secret_key_here
SESSION_EXPIRE_MINUTES=1440
