# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CRM Configuration
CRM_BASE_URL=https://stage-api.simpo.ai/crm
CRM_API_KEY=your_crm_api_key_here
CRM_AUTH_TOKEN=your_crm_auth_token_here

# PMS Configuration
PMS_BASE_URL=https://stage-api.simpo.ai/pms
PMS_API_KEY=your_pms_api_key_here
PMS_AUTH_TOKEN=your_pms_auth_token_here

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/research_db
REDIS_URL=redis://localhost:6379/0

# Search APIs
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here
BING_API_KEY=your_bing_api_key_here

# Web Scraping
PROXY_URL=optional_proxy_url
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Application Settings
APP_NAME=Research & Brainstorming Engine
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Research Settings
MAX_SOURCES_PER_QUERY=20
CREDIBILITY_THRESHOLD=0.6
RECENCY_MONTHS=12
CACHE_TTL_SECONDS=3600